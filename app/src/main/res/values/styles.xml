<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="ToolBarLayout">
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_height">@dimen/product_detail_toolbar_height</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/product_detail_toolbar_title_text</item>
        <item name="android:textSize">@dimen/product_detail_toolbar_title_text_size</item>
        <item name="android:layout_marginBottom">@dimen/product_detail_toolbar_title_layout_marginBottom</item>
        <item name="android:layout_marginTop">@dimen/product_detail_toolbar_title_layout_marginTop</item>
        <item name="android:layout_marginStart">@dimen/product_detail_toolbar_title_layout_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/product_detail_toolbar_title_layout_marginEnd</item>
    </style>

    <style name="ToolBarCloseIcon">
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_height">@dimen/zero_height</item>
        <item name="android:layout_marginStart">@dimen/product_detail_toolbar_icon_layout_marginStart</item>
        <item name="android:layout_marginBottom">@dimen/product_detail_toolbar_icon_layout_marginBottom</item>
        <item name="android:layout_marginTop">@dimen/product_detail_toolbar_icon_layout_marginTop</item>
        <item name="android:layout_marginEnd">@dimen/product_detail_toolbar_icon_layout_marginEnd</item>
        <item name="android:src">@drawable/close_icon</item>
        <item name="android:padding">@dimen/product_detail_toolbar_icon_close_padding</item>
    </style>
</resources>